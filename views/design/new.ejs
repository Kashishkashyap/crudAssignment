<% layout('layout/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Dish</h1>
  
    <div class="col-6 offset-3">
        <form action="/zomato" method="post" novalidate class="formvalidations">
            <div class="mb-3">
                <label class="form-label" for="restaurant">Restaurant Name</label>
            <input type="text" class="form-control" name="zomato[restaurant]" id="restaurant" placeholder="Name of your Restaurant" required>
            <div class="valid-feedback">
                Looks Good
            </div> </div>
            <div class="mb-3">
                <label class="form-label" for="name">name</label>
                <input type="text" class="form-control" id="name" name="zomato[name]" placeholder="name" required>
            <div class="valid-feedback">
                Looks Good
            </div> </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
            <input type="text"class="form-control" name="zomato[image]" id="image" placeholder="image" required>
            <div class="valid-feedback">
                Looks Good
            </div> </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
            <input type="number"class="form-control" name="zomato[price]" id="price" placeholder="price" required>
            <div class="valid-feedback">
                Looks Good
            </div> </div>
            <div class="mb-3">
                <label class="form-label" for="discount">Discount</label>
            <input type="text"class="form-control" name="zomato[discount]" id="discount" placeholder="discount" >
            <div class="valid-feedback">
                Looks Good
            </div> </div>  
            <div class="mb-3">
                <label class="form-label" for="time">Deliver Time</label>
            <input type="text"class="form-control" name="zomato[time]" id="time" placeholder="expected delivery time" >
            <div class="valid-feedback">
                Looks Good
            </div> </div> 
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="zomato[description]" type="text" placeholder="description" rows="5" required></textarea>
            <div class="valid-feedback">
                Looks Good
            </div> </div>
            <div class="mb-3">
                <button class="btn btn-danger"> Add  </button>
    <button class="btn btn-danger"><a href="/zomato">Cancel</a></button>
            </div>
            </form>
            
    </div>
</div>
    
